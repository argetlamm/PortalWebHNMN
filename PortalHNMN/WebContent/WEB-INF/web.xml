<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>PortalHNMN</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
  	<param-name>upload.location</param-name>
  	<param-value>/path/to/uploads/</param-value>
  </context-param>
  <servlet>
	  <servlet-name>SL_paginacionArticulos</servlet-name>
	  <servlet-class>SL_paginacionArticulos</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>SL_paginacionArticulos</servlet-name>
	  <url-pattern>/servlets/*</url-pattern>
  </servlet-mapping>
</web-app>